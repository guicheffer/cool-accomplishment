/*==============================================================================
  Local Variables
  ============================================================================*/

$container-results-min-height = $sidebar-height

/*==============================================================================
  Content Container
  ============================================================================*/

.spotippos-content
  padding-top remify($halfrem * 2)
  height $sidebar-height

.dashboard
  cursor default
  line-height remify(50px)
  padding remify(20px)
  position relative
  .centralize-middle
    position absolute
    top 45%
    left 50%
    transform translate(-50%, -50%)
  h3
    color $dashboard-color-default
    font-size remify(24px)
    line-height remify(25px)

    small
      font-size remify(16px)
      font-weight normal
  p
    margin-top remify(10px)
    font-style italic
    font-size remify(12px)
    line-height remify(20px)

.wrapper-page
  padding remify($halfrem * 4) remify($halfrem * 2)
  margin 0
  overflow-y scroll
.page-box
  $local-padding = $page-box-padding

  box-sizing border-box
  padding 0 remify(5px)
  text-align left
  color $gray-default

  *
    font-weight normal
  .container
    width 100%
    height 100%
    background-color $page-box-filters-background-color
    border-radius remify(2px)
    box-shadow 0 remify(2px) remify(4px) 0 rgba(0, 0, 0, 0.12)
    box-sizing border-box
  .form-row
    border-bottom solid 1px rgba(0, 0, 0, 0.1)
    padding $local-padding
    font-size 0

    &:last-child
      border 0

    .between-count
      width 100%

      label
        display block
      input
        display inline-block
        width 45%
      .icon
        border-top solid 1px $gray-label
        width 3%
        display inline-block
        vertical-align middle
        margin 0


/*==============================================================================
  Media Customized
  ============================================================================*/

@media $media-query-min-desktop
  .page-box:last-child
    padding-left remify(20px)
    padding-right 0

@media $media-query-weak-desktop-screen
  .page-box
    .form-row
      .between-count
        input
          width 44% /*fix width on tablet devices (minor 1px)*/

@media $media-query-tablet
  .wrapper-page
    padding remify($halfrem * 3) remify($halfrem * 2)

  .page-box
    margin-bottom remify($halfrem * 2)

    &:last-child
      margin-top 0
