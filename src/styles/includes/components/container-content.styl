/*==============================================================================
  Local Variables
  ============================================================================*/

$container-results-min-height = $sidebar-height

/*==============================================================================
  Content Container
  ============================================================================*/

.spotippos-content
  padding-top remify($halfrem * 2)
  height $sidebar-height

.wrapper-page
  padding remify($halfrem * 4) remify($halfrem * 2)
  margin 0
  overflow-y scroll
.page-box
  $local-padding = $page-box-padding

  box-sizing border-box
  padding 0 remify(5px)
  text-align left
  color $gray-default

  *
    font-weight normal
  .container
    width 100%
    height 100%
    background-color $page-box-filters-background-color
    border-radius remify(2px)
    box-shadow 0 remify(2px) remify(4px) 0 rgba(0, 0, 0, 0.12)
    box-sizing border-box
  .title
    padding $local-padding
    padding-bottom 0
  .form-row
    border-bottom solid 1px rgba(0, 0, 0, 0.1)
    padding $local-padding
    font-size 0

    &:last-child
      border 0

    .between-count
      width 100%

      label
        display block
      input
        display inline-block
        width 39%
      .icon
        border-top solid 1px $gray-label
        width 10%
        display inline-block
        vertical-align middle
        margin remify(-4px)


/*==============================================================================
  Media Customized
  ============================================================================*/

@media $media-query-min-desktop
  .page-box:last-child
    padding-left remify(20px)
    padding-right 0

@media $media-query-tablet
  .wrapper-page
    padding remify($halfrem * 3) remify($halfrem * 2)

  .page-box
    margin-bottom remify($halfrem * 2)

    &:last-child
      margin-top 0
