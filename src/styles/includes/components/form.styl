/*==============================================================================
  form
  ============================================================================*/

.container-filter
  $local-spacing = $page-box-padding

  position relative

  .title
    padding $local-spacing
    padding-bottom 0
  .errorMsg
    top 0
    right 0
    position absolute
    font-size remify(12px)
    color var(--errorColor)
    margin $local-spacing

.form-group
  $local-input-height = 36px

  display inline-block
  width 50%
  font-size remify(12px)

  label
    color $gray-label
    text-transform uppercase
    line-height remify($halfrem * 2)
  input
    width 79%
    display block
    margin remify(2px) 0
    border-radius remify(2px)
    border solid 1px $gray-border
    height remify($local-input-height)
    line-height remify($local-input-height)
    font-family 'Open Sans'
    font-size remify($local-input-height / 3)
    font-weight normal
    padding-left remify(5px)
    transition background .2s linear
    &[disabled]
      background $gray-blur
      filter blur(1px)
.btn
  min-width remify(20px)
  height remify(32px)
  border-radius remify(2px)
  box-shadow inset 0 remify(-1px) 0 0 rgba(0, 0, 0, 0.12)
  box-sizing border-box
  padding remify(5px) remify(10px)
  text-transform uppercase
  text-decoration none
  font-size 1vw
  color $white !important
  background $blue
  &.btn-primary
    background-color $btn-default-background-color !important
    &:hover
      background-color darken($btn-default-background-color, 10%) !important
    &:active
      background-color darken($btn-default-background-color, 20%) !important


/* =============================================================================
   Media Customized
   ========================================================================== */

@media $media-query-tablet
  .container-filter
    padding-top 0 !important