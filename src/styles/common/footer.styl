/*==============================================================================
	Local Variables
  ============================================================================*/

$height-header = 30px

/*==============================================================================
	Footer
  ============================================================================*/

footer
  position absolute
  bottom 0
  box-sizing border-box
  text-align right
  background $footer-background-color
  color $white
  font-weight normal

  p
    font-family 'Open Sans'
    font-size remify(12px)
    line-height remify(30px)
    padding remify(2px) remify($halfrem * 4) remify(2px)
  a
    letter-spacing remify(2px)
    margin 0 remify(3px)


/*==============================================================================
  Media Customized
  ============================================================================*/

@media $media-query-tablet
  footer
    position fixed
