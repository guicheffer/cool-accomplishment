/*==============================================================================
	Local Variables
  ============================================================================*/

$height-header = 30px

/*==============================================================================
	Footer
  ============================================================================*/

footer
  position absolute
  bottom 0
  padding remify(10px)
  box-sizing border-box
  text-align right
  background $footer-background-color
  color $white
  font-weight normal
  font-family 'Open Sans'
  line-height remify(22px)
